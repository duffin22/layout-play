<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hfad.myrecipebook.AddItemActivity"
    android:orientation="vertical">


<!--toolbar layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"
        android:layout_gravity="top"
        android:background="@color/softerWhite"
        android:orientation="horizontal"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/editButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        
        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_home"
            android:layout_gravity="center_vertical"/>
        
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!--Frame layout containing image of recipe and ratings bar-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:elevation="2dp"
                >

            <!--rating bar linear layout-->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="48dp"
                    android:id="@+id/rating"
                    android:layout_gravity="bottom|end"
                    android:background="@android:color/transparent"
                    android:elevation="1dp"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/star_empty"
                        android:id="@+id/star1"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/star_empty"
                        android:id="@+id/star2"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/star_empty"
                        android:id="@+id/star3"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/star_empty"
                        android:id="@+id/star4"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/star_empty"
                        android:id="@+id/star5"/>


                </LinearLayout>

            <!--image view displaying photo of the recipe-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:id="@+id/imageAdd"
                    android:src="@drawable/camera_background"
                    android:alpha="0.8"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />


            </FrameLayout>


        <!--Linear layout containing title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_margin="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:textColor="@color/softWhite"
                    android:textAlignment="center"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:singleLine="false"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="60"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:background="@color/softWhite"
                    android:id="@+id/titleEdit"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textSize="18sp"
                    android:padding="4dp"
                    android:textColor="@color/softWhite"
                    android:textAlignment="center"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredientList"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/softWhite">

                </ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:id="@+id/addEditBar">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:hint="Add Ingredient"
                    android:id="@+id/addEditText"
                    android:windowSoftInputMode="stateAlwaysVisible"
                    android:layout_marginLeft="12dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_done"
                    android:padding="4dp"
                    android:layout_marginRight="12dp"
                    android:id="@+id/tickIcon"/>
            </LinearLayout>






            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/add"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="0dp"
                android:visibility="visible"
                android:id="@+id/addIngredientButton"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/categories"
                android:id="@+id/categories"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:layout_gravity="center"
                android:id="@+id/confirm"/>


        </LinearLayout>


    </ScrollView>


</FrameLayout>

